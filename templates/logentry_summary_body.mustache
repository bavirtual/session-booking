{{!
    @template local_booking/logentry_summary_body

    This template renders the body of calendar logentrys summary modal.

    Example context (json):
    {
        "timestart": 1490320388,
        "description": "An random logentry description",
        "location": "13th floor, building 42",
        "source": "Ical imported",
        "groupname": "Group 1"
    }
}}
<div{{!
    }} class="summary-modal-container"{{!
    }} data-region="summary-modal-container"{{!
    }} data-type="logentry"{{!
    }} data-logentry-id="{{id}}"{{!
    }} data-student-id="{{studentid}}"{{!
    }} data-exercise-id="{{exerciseid}}"{{!
    }} data-course-id="{{courseid}}"{{!
    }} data-logentry-title="{{#str}} logentry, local_booking {{/str}}"{{!
    }}>
    <div class="container-fluid">
        {{> local_booking/logentry_details }}
    </div>
</div>
