{{!
    @template local_booking/week_navigation

    Calendar week navigation header view.

    The purpose of this template is to render the navigation to switch to previous and next week.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div id="week-navigation-{{uniqid}}" class="controls">
    <div class="calendar-controls">
        <a{{!
            }} href="{{previousperiodlink}}"{{!
            }} class="arrow_link previous"{{!
            }} title="{{#str}}weekprev, local_booking{{/str}}"{{!
            }} data-year="{{previousperiod.year}}"{{!
            }} data-week="{{previousweek}}"{{!
            }} data-time="{{previousweekts}}"{{!
            }}>
            <span class="arrow">{{{larrow}}}</span>
            &nbsp;
            <span class="arrow_text">{{previousperiodname}}</span>
        </a>
        <span class="hide"> | </span>
        <h2 class="current">{{periodname}}
        {{^editing}}
        <br/><span class="availability-student">{{username}}</span>
        {{/editing}}
        </h2>
    <span class="hide"> | </span>
        <a{{!
            }} href="{{nextperiodlink}}"{{!
            }} class="arrow_link next"{{!
            }} title="{{#str}}weeknext, local_booking{{/str}}"{{!
            }} data-year="{{nextperiod.year}}"{{!
            }} data-week="{{nextweek}}"{{!
            }} data-time="{{nextweekts}}"{{!
            }}>
            <span class="arrow_text">{{nextperiodname}}</span>
            &nbsp;
            <span class="arrow">{{{rarrow}}}</span>
        </a>
    </div>
</div>
