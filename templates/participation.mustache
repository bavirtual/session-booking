{{!
    @template local_booking/participation

    Instructor participation view for course managers.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div>
{{> core/overlay_loading}}
<br/><p><h3>{{#str}} participation, local_booking {{/str}}</h3></p>
<table id="participation-detail-{{uniqid}}" data-region="instructor-participation" class="calendartable booking-table table-hover">
    <thead>
        <tr>
            <th class="header booking-header text-xs-center">
                <span class="media-body" aria-hidden="true">{{#str}} instructors, local_booking {{/str}}</span>
            </th>
            <th class="header booking-header text-xs-center">
                <span class="media-body" aria-hidden="true">{{#str}} role, local_booking {{/str}}</span>
            </th>
            <th class="header booking-header text-xs-center">
                <span class="media-body" aria-hidden="true">{{#str}} lastsessiondate, local_booking {{/str}}</span>
            </th>
            <th class="header booking-header text-xs-center">
                <span class="media-body" aria-hidden="true">{{#str}} lastgradeddate, local_booking {{/str}}</span>
            </th>
            <th class="header booking-header text-xs-center">
                <span class="media-body" aria-hidden="true">{{#str}} elapseddays, local_booking {{/str}}</span>
            </th>
        </tr>
    </thead>
    <tbody>
    {{#participation}}
        <tr data-region="booking">
            <td class="booking-text-big text-md-left">
                <span>{{instructorname}}</span>
            </td>
            <td class="booking-text booking-text-med text-sm-center">
                <span>{{roles}}</span>
            </td>
            <td class="booking-text booking-text-med text-sm-center">
                <span>{{lastsessiondate}}</span>
            </td>
            <td class="booking-text booking-text-med text-sm-center">
                <span>{{lastgradeddate}}</span>
            </td>
            <td class="booking-text booking-text-small text-sm-center">
                <span>{{elapseddays}}</span>
            </td>
        </tr>
    {{/participation}}
    </tbody>
</table>
</div>

